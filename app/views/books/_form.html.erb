 
    <table summary="Subject form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%= f.select :genre, ['Romance',"Sci-Fi","Adventure","Other"] %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.text_field(:price) %></td>
      </tr>
      <tr>
        <th>Published Date</th> 
        <td><%= f.date_select(:published_date,:order =>[:month,:day,:year]) %></td>
      </tr>
    </table>